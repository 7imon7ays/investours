<div>
	<p>$<%= project.amount_raised %> raised out of $<%= project.fundraising_goal %> needed</p>
	<div class='meter'>
		<span style="width: <%= project.progress_status %>%"></span>
	</div>
</div>


<script type="text/javascript">
$(".meter > span").each(function() {
	$(this)
		.data("origWidth", $(this).width())
		.width(0)
		.animate({
			width: $(this).data("origWidth")
		}, 1200);
});
</script>