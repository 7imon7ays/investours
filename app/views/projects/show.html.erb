<h1><%= @project.title %></h1>
<div><a href="<%= entrepreneur_url(@entrepreneur) %>"><%= @entrepreneur.full_name %></a></div>
<div><%= @project.description %></div>


<%= render partial: "projects/status", locals: { project: @project } %>

<% if user_is_admin? %>
	<% if @project.fully_funded?%>
	<%= render partial: "projects/new_payment", locals: { project: @project } %>
	<% else %>
	<%= render partial: "projects/new_loan", locals: { project: @project } %>
	<% end %>
<% end %>

<%= render partial: "projects/updates", locals: { project: @project, updates: @updates } %>
